import java.awt.*;
import java.awt.event.*;
import java.util.*;
import javax.swing.*;

public class TicTacToe implements ActionListener{

	Random random = new Random();
	JFrame frame = new JFrame();
	JPanel title_panel = new JPanel();
	JPanel button_panel = new JPanel();
	JLabel textfield = new JLabel();
	JButton[] buttons = new JButton[0];
	boolean player1_turn;

	public TicTacToe(int size) {
		
		frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		frame.setSize(800,800);
		frame.getContentPane().setBackground(new Color(50,50,50));
		frame.setLayout(new BorderLayout());
		frame.setVisible(true);
		
		textfield.setBackground(new Color(25,25,25));
		textfield.setForeground(new Color(25,255,0));
		textfield.setFont(new Font("Ink Free",Font.BOLD,75));
		textfield.setHorizontalAlignment(JLabel.CENTER);
		textfield.setText("Tic-Tac-Toe");
		textfield.setOpaque(true);
		
		title_panel.setLayout(new BorderLayout());
		title_panel.setBounds(0,0,800,100);
		
		button_panel.setLayout(new GridLayout(size,size));
		button_panel.setBackground(new Color(150,150,150));
		
		int boardSize = size * size;
		buttons = new JButton[boardSize];
		for(int i=0;i<boardSize;i++) {
			buttons[i] = new JButton();
			button_panel.add(buttons[i]);
			buttons[i].setFont(new Font("MV Boli",Font.BOLD,120));
			buttons[i].setFocusable(false);
			buttons[i].addActionListener(this);
		}
		
		title_panel.add(textfield);
		frame.add(title_panel,BorderLayout.NORTH);
		frame.add(button_panel);
		
		firstTurn();
	}

	@Override
	public void actionPerformed(ActionEvent e) {
		int buttonX = 0;
		int buttonY = 0;
		for(int i=0;i<buttons.length;i++) {
			if(e.getSource()==buttons[i]) {
				if(player1_turn) {
					if(buttons[i].getText()=="") {
						buttons[i].setForeground(new Color(255,0,0));
						buttons[i].setText("X");
						player1_turn=false;
						textfield.setText("O turn");
						check(buttonX, buttonY);
					}
				}
				else {
					if(buttons[i].getText()=="") {
						buttons[i].setForeground(new Color(0,0,255));
						buttons[i].setText("O");
						player1_turn=true;
						textfield.setText("X turn");
						check(buttonX, buttonY);
					}
				}
			}			
		}
	}
	
	public void firstTurn() {
		
		try {
			Thread.sleep(2000);
		} catch (InterruptedException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		
		if(random.nextInt(2)==0) {
			player1_turn=true;
			textfield.setText("X turn");
		}
		else {
			player1_turn=false;
			textfield.setText("O turn");
		}
	}
	
	public void check(int buttonX, int buttonY) {
		//check win condition in row 1
		for (int i = 0; i < Math.sqrt(buttons.length); i++) {
			if(buttons[i].getText() == "X") {
				buttonX = buttonX + 1;
			}	
			if(buttons[i].getText() == "O") {
				buttonY = buttonY + 1;
			}
			
			if(buttonX == Math.sqrt(buttons.length) || buttonY == Math.sqrt(buttons.length)) {
				for (int index = 0; index < Math.sqrt(buttons.length); index++) {
				buttons[index].setBackground(Color.GREEN);
				buttons[index].setEnabled(false);
				textfield.setText(buttons[index].getText() == "X" ? "X wins" : "O wins");
				}
			}
		}
	}
}